[global/wm]
margin-top = 0
margin-bottom = 0
override-redirect = false

[bar/bar]
background     = ${xrdb:color0}
foreground     = ${xrdb:color1}

height         = 30
width          = 400
offset-x       = 32
offset-y       = 1050 

modules-left   = bspwm
modules-center = date bat0 bat1

bottom         = true
fixed-center   = true
font-0         = xos4 Terminus:style=Bold:size=12 
font-1	       = FontAwesome:style=Regular

enable-ipc     = true
wm-restack     = bspwm
tray-position  = right
tray-maxsize   = 20

[bar/bar3]
inherit        = bar/bar
background     = ${xrdb:color0}
foreground     = ${xrdb:color7}
modules-left   = bspwm
modules-center = date bat0 bat1
width          = 1200
offset-y       = 0
offset-x       = 900
separator      = " - "

[module/bat0]
type           = custom/script
interval       = 5
exec           = ~/scripts/polybar/bat0

[module/bat1]
type           = custom/script
interval       = 5
exec           = ~/scripts/polybar/bat1

[module/date]
type = internal/date
interval = 5

time = %H:%M

label = %time%

[bar/song]
inherit        = bar/bar
background     = ${xrdb:color0}
foreground     = ${xrdb:color1}
modules-center = mpd
width          = 400 
offset-y       = 1000
offset-x       = 1480
mpd-format     = <label-song>
mpdoff-format  = <label-offline>

[bar/player]
inherit        = bar/bar
background     = ${xrdb:color1}
foreground     = ${xrdb:color0}
modules-center = mpd
width          = 120 
offset-y       = 960
offset-x       = 1760
mpd-format     = <icon-prev>   <toggle>   <icon-next>
mpdoff-format  =

[module/mpd]
type = internal/mpd
format-online = ${root.mpd-format} 
format-offline = ${root.mpdoff-format}

label-offline = MPD is offline
icon-prev = <<
icon-play = PLAY
icon-pause = PAUSE 
icon-next = >>

label-song-maxlen = 360 
label-song-ellipsis = true

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-focused            = "Ã—"
label-focused-background = ${xrdb:color0}
label-focused-foreground = ${xrdb:color1}
label-focused-padding    = 1

label-urgent = %name%
label-urgent-background = ${xrdb:color1}
label-urgent-foreground = ${xrdb:color0}
label-urgent-padding = 1

label-empty            = %name%
label-empty-background = ${xrdb:color0}
label-empty-foreground = ${xrdb:color2}
label-empty-padding    = 1

label-occupied            = %name%
label-occupied-background = ${xrdb:color0}
label-occupied-foreground = ${xrdb:color1}
label-occupied-padding    = 1

format-padding = 1
